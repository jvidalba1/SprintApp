<%=
semantic_form_for [@client, @contact], :builder => ActiveAdmin::FormBuilder do |f| 
  f.inputs "Información del contacto" do
    f.input :name, :label => "Nombre"
    f.input :phone, :label => "Teléfono", as: :string, :input_html => { value: number_to_phone(@contact.phone), maxlength: 14 }
    f.input :cell, :label => "Celular", as: :string, input_html: { value: number_to_phone(@contact.cell), maxlength: 14 }
    f.input :email
  end 
  render :partial => "addresses/form", :locals => { :form => f } 
  f.buttons 
end 
%>