<%=
form.inputs "Direcciones" do
  form.semantic_fields_for :address do |address|
    address.inputs :class => "" do 
      address.input :street, :label => "Calle"
      address.input :city, :label => "Ciudad"
      address.input :state, :label => "Departamento", :as => :select, :collection => States::all.invert, :required => false
      address.input :zip, as: :string
    end 
  end 
end 
%>